{
  "name": "pathtree",
  "displayName": "PathTree",
  "description": "Generates a tree-structured file path of the workspace.",
  "version": "0.0.1", 
 "publisher": "SakibAlHasan",
 "icon": "media/icon.png",

  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
"contributes": {
  "commands": [
    {
      "command": "pathtree.generateFilePath",
      "title": "TreePath: Create TreePath for all foldersðŸŒ³- Generate File Path Tree"
    },
    {
      "command": "pathtree.generateFolderFilePath",
      "title": "TreePath: Create TreePath for this folder onlyðŸŒ³"
    }
  ],
  "menus": {
    "commands": [
      {
        "command": "pathtree.generateFilePath",
        "when": "editorTextFocus"
      }
    ],
    "explorer/context": [
      {
        "command": "pathtree.generateFilePath",
        "group": "navigation"
      },
      {
        "command": "pathtree.generateFolderFilePath",
        "when": "explorerResourceIsFolder",
        "group": "navigation"
      }
    ],
    "explorer/newFile": [
      {
        "command": "pathtree.generateFilePath",
        "group": "navigation",
        "icon": {
          "dark": "media/icons/file-path-dark.svg",
          "light": "media/icons/file-path-light.svg"
        }
      }
    ]
  },
  "keybindings": [
    {
      "command": "pathtree.generateFilePath",
      "key": "ctrl+alt+t",
      "when": "editorTextFocus"
    }
  ]
}
,
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
